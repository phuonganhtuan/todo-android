<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidBP" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_theme_green</item>
        <item name="colorPrimaryVariant">@color/color_theme_green_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryLight">@color/color_theme_green_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_theme_green</item>
        <item name="colorSecondaryVariant">@color/color_theme_green_variant</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/color_bg_main_grey</item>
        <item name="android:fontFamily">@font/sf_rounded_medium</item>
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>
        <item name="android:timePickerStyle">@style/CustomTimePickerTheme</item>
        <item name="popupMenuStyle">@style/BasePopupMenu</item>
    </style>

    <attr name="colorPrimaryLight" format="color"/>

    <style name="Theme.AndroidBP.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AndroidBP.Alarm" parent="Theme.AndroidBP">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@android:color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_round</item>
        <item name="windowSplashScreenAnimationDuration">1500</item>
        <item name="postSplashScreenTheme">@style/Theme.AndroidBP.NoActionBar</item>
    </style>

    <style name="Theme.AndroidBP.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AndroidBP.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ToolBarButtonStyle">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="tabIndicatorColor">?attr/colorPrimary</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/sf_rounded_medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomBottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="colorPrimary">?attr/colorPrimary</item>
        <item name="colorPrimaryVariant">?attr/colorPrimaryVariant</item>
        <item name="colorPrimaryLight">?attr/colorPrimaryLight</item>
        <item name="backgroundColor">@android:color/transparent</item>
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">24dp</item>
        <item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerSizeBottomRight">24dp</item>
        <item name="cornerSizeBottomLeft">24dp</item>
    </style>

    <style name="RippleEffect">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="EditTextWithDot">
        <item name="android:autofillHints" tools:targetApi="o">@null</item>
        <item name="android:backgroundTint">@color/color_border_grey</item>
        <item name="android:drawableStart">@drawable/ic_dot_grey</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@color/color_text_secondary_dark</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CustomTimePickerTheme" parent="android:Widget.Material.Light.TimePicker">
        <item name="android:timePickerMode">clock</item>
        <item name="colorAccent">?attr/colorPrimary</item>
        <item name="colorControlActivated">?attr/colorPrimary</item>
        <!--        <item name="android:numbersTextColor">@color/black</item>-->
        <!--        <item name="android:numbersSelectorColor">@color/color_primary</item>-->
        <!--        <item name="android:numbersBackgroundColor">@color/color_bg_main_grey</item>-->
    </style>

    <style name="ToDoTimePicker" parent="@android:style/Widget.Material.TimePicker">
        <item name="android:headerBackground">@android:color/white</item>
        <item name="android:numbersTextColor">@color/color_menu_text_default</item>
        <item name="android:numbersInnerTextColor">#f44336</item>
        <item name="android:numbersSelectorColor">?attr/colorPrimary</item>
        <item name="android:numbersBackgroundColor">@color/color_border_grey</item>
        <item name="android:amPmTextColor">?attr/colorPrimaryLight</item>
    </style>

    <style name="customSwitch" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/white</item>
        <item name="colorAccent">?attr/colorPrimary
        </item>
    </style>

    <style name="ButtonSecondaryGrey" parent="CustomButton">
        <item name="android:textColor">@color/color_text_secondary_dark</item>
        <item name="android:background">@drawable/bg_rounded_stroke_grey_8</item>
    </style>

    <style name="CustomButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="ButtonSecondaryWhite" parent="CustomButton">
        <item name="android:textColor">@color/color_text_secondary_dark</item>
        <item name="android:background">@drawable/bg_ripple_white_stroke_grey_border_rounded_8
        </item>

    </style>

    <style name="ButtonPrimary" parent="CustomButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_primary_rounded_8</item>
    </style>

    <style name="ButtonPrimary_16" parent="CustomButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_primary_rounded_16</item>
    </style>

    <style name="BasePopupMenu" parent="Widget.AppCompat.Light.PopupMenu">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:popupBackground">@drawable/bg_white_rounded_8</item>
        <item name="elevationOverlayEnabled">true</item>
        <item name="elevation">16dp</item>
        <item name="elevationOverlayColor">@color/color_border_grey</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_menu_text_default</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/sf_rounded_regular</item>
    </style>

    <!--    Theme-->
    <style name="Theme.AndroidBP.Green" parent="Theme.AndroidBP.NoActionBar">
        <item name="colorPrimary">@color/color_theme_green</item>
        <item name="colorPrimaryVariant">@color/color_theme_green_variant</item>
        <item name="colorPrimaryLight">@color/color_theme_green_light</item>
    </style>

    <style name="Theme.AndroidBP.Red" parent="Theme.AndroidBP.NoActionBar">
        <item name="colorPrimary">@color/color_red_theme</item>
        <item name="colorPrimaryVariant">@color/color_red_theme_variant</item>
        <item name="colorPrimaryLight">@color/color_red_theme_light</item>
    </style>

    <style name="Theme.AndroidBP.Orange" parent="Theme.AndroidBP.NoActionBar">
        <item name="colorPrimary">@color/color_orange_theme</item>
        <item name="colorPrimaryVariant">@color/color_orange_theme_variant</item>
        <item name="colorPrimaryLight">@color/color_orange_theme_light</item>
    </style>

    <style name="Theme.AndroidBP.GreenLight" parent="Theme.AndroidBP.NoActionBar">
        <item name="colorPrimary">@color/color_green_light_theme</item>
        <item name="colorPrimaryVariant">@color/color_green_light_theme_variant</item>
        <item name="colorPrimaryLight">@color/color_green_light_theme_light</item>
    </style>

    <style name="Theme.AndroidBP.Blue" parent="Theme.AndroidBP.NoActionBar">
        <item name="colorPrimary">@color/color_blue_theme</item>
        <item name="colorPrimaryVariant">@color/color_blue_theme_variant</item>
        <item name="colorPrimaryLight">@color/color_blue_theme_light</item>
    </style>

    <style name="Theme.AndroidBP.Purple" parent="Theme.AndroidBP.NoActionBar">
        <item name="colorPrimary">@color/color_purple_theme</item>
        <item name="colorPrimaryVariant">@color/color_purple_theme_variant</item>
        <item name="colorPrimaryLight">@color/color_purple_theme_light</item>
    </style>

    <style name="DefaultNumberPickerTheme" parent="AppTheme">
        <item name="colorControlNormal">@android:color/transparent</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.Loading.Primary" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="trackColor">?attr/colorPrimary</item>
    </style>

    <style name="CustomTextViewAds" parent="Theme.AndroidBP.NoActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:text">@string/ad_attribution</item>
        <item name="android:background">#FFCC66</item>
    </style>

    <string name="ad_attribution" translatable="false">Ad</string>
    <style name="ExitAppTheme.Ads" parent="@style/AdsAppTheme">
        <item name="android:textSize">11.0sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:background">@drawable/ads_icon</item>
        <item name="android:paddingLeft">3.0dip</item>
        <item name="android:paddingRight">6.0dip</item>
        <item name="android:paddingBottom">1.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">15.0px</item>
        <item name="android:minHeight">15.0px</item>
        <item name="android:text">Ad</item>
    </style>
</resources>
