<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutWidget"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top"
    android:gravity="top">

    <TextView
        android:id="@+id/viewBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_white_rounded" />

    <TextView
        android:id="@+id/viewBgTitle"
        android:layout_width="match_parent"
        android:layout_alignTop="@id/textTitleWidget"
        android:layout_alignBottom="@id/textTitleWidget"
        android:layout_height="match_parent"
        android:background="@drawable/bg_widget_1_round_top" />

    <TextView
        android:id="@+id/textTitleWidget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_rounded_medium"
        android:padding="16dp"
        android:text="@string/tasks"
        android:textColor="@color/color_menu_text_default"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageAddTask"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentTop="true"
        android:layout_marginVertical="16dp"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@id/imageSetting"
        android:contentDescription="@null" />

    <ImageView
        android:id="@+id/imageSetting"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="@null" />

    <ListView
        android:id="@+id/listTasks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textTitleWidget"
        android:layout_marginBottom="16dp"
        android:divider="@null"
        tools:listitem="@layout/item_widget_standard_task" />

    <TextView
        android:id="@+id/textEmptyWidget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textTitleWidget"
        android:layout_centerInParent="true"
        android:layout_margin="32dp"
        android:gravity="center"
        android:text="@string/no_task"
        android:textColor="@color/color_text_secondary_dark"
        android:textStyle="bold" />
</RelativeLayout>
