<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_suggest" />

    <LinearLayout
        android:id="@+id/layoutSuggest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="32dp"
        android:background="@drawable/bg_white_rounded"
        android:elevation="24dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:outlineAmbientShadowColor="@color/color_primary"
        android:outlineSpotShadowColor="@color/color_primary"
        android:padding="24dp"
        tools:targetApi="p">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_rounded_extra_bold"
            android:text="@string/app_name"
            android:textColor="@color/color_menu_text_default"
            android:textSize="26sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/organize_tasks_easier_with_to_do_list"
            android:textColor="@color/color_text_secondary"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="36dp"
            android:src="@drawable/img_no_task" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonCreateTask"
            style="@style/ButtonPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:paddingHorizontal="24dp"
            android:text="@string/create_task" />
    </LinearLayout>
</RelativeLayout>
