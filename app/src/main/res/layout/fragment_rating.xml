<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_rounded_16"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_rounded_bold"
        android:gravity="center"
        android:text="@string/we_are_working_hard_to_provide_a_better_user_experience"
        android:textColor="@color/color_menu_text_default"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textSuggest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/please_rate_us_5_stars_if_you_enjoy_our_app"
        android:textColor="@color/color_text_secondary_dark"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/layoutStars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/star1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:contentDescription="@null"
            android:scaleType="centerInside"
            android:src="@drawable/ic_star_outline"
            android:tag="1" />

        <ImageView
            android:id="@+id/star2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:contentDescription="@null"
            android:scaleType="centerInside"
            android:src="@drawable/ic_star_outline"
            android:tag="2" />

        <ImageView
            android:id="@+id/star3"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:contentDescription="@null"
            android:scaleType="centerInside"
            android:src="@drawable/ic_star_outline"
            android:tag="3" />

        <ImageView
            android:id="@+id/star4"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:contentDescription="@null"
            android:scaleType="centerInside"
            android:src="@drawable/ic_star_outline"
            android:tag="4" />

        <ImageView
            android:id="@+id/star5"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:contentDescription="@null"
            android:scaleType="centerInside"
            android:src="@drawable/ic_star_outline"
            android:tag="5" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonRate"
        style="@style/ButtonPrimary_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_rounded_bold"
        android:layout_marginTop="32dp"
        android:text="@string/rate" />
</LinearLayout>
