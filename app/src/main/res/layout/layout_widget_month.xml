<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutWidget"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top"
    android:gravity="top">

    <TextView
        android:id="@+id/viewBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_white_rounded" />

    <TextView
        android:id="@+id/textMonthYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="12dp"
        android:fontFamily="@font/sf_rounded_medium"
        android:padding="16dp"
        android:text="February 2022"
        android:textColor="@color/color_menu_text_default"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imagePreviousMonth"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignTop="@id/textMonthYear"
        android:layout_marginVertical="15dp"
        android:layout_toStartOf="@id/textMonthYear"
        android:contentDescription="@null"
        android:padding="4dp" />

    <ImageView
        android:id="@+id/imageNextMonth"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignTop="@id/textMonthYear"
        android:layout_marginVertical="15dp"
        android:layout_toEndOf="@id/textMonthYear"
        android:contentDescription="@null"
        android:padding="4dp" />

    <ImageView
        android:id="@+id/imageSetting"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="@null" />

    <LinearLayout
        android:id="@+id/layoutDays"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textMonthYear"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textDay1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="S"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textDay2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="M"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textDay3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="T"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textDay4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="W"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textDay5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="T"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textDay6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="F"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textDay7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="S"
            android:textColor="@android:color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <GridView
        android:id="@+id/gridCalendar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layoutDays"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:columnWidth="36dp"
        android:numColumns="7"
        tools:listitem="@layout/item_calendar_widget" />
</RelativeLayout>
