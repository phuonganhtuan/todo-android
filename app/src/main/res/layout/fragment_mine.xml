<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="24dp"
    android:background="@color/color_bg_main_grey"
    tools:context=".screens.home.tasks.TasksFragment">

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:fontFamily="@font/sf_rounded_bold"
        android:text="@string/tasks_overview"
        android:textColor="@color/color_menu_text_default"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <LinearLayout
        android:id="@+id/layoutDone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_rounded_stroke_grey_16"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        app:layout_constraintEnd_toStartOf="@id/guidelineCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textTitle">

        <TextView
            android:id="@+id/textDoneNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/sf_rounded_extra_bold"
            android:textColor="?attr/colorPrimary"
            android:textSize="36sp"
            tools:text="4" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/completed_tasks"
            android:textColor="@color/color_text_secondary_dark"
            android:textSize="17sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutPending"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_rounded_stroke_grey_16"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guidelineCenter"
        app:layout_constraintTop_toBottomOf="@id/textTitle">

        <TextView
            android:id="@+id/textPendingNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/sf_rounded_extra_bold"
            android:textColor="@color/color_mine_yellow"
            android:textSize="36sp"
            tools:text="12" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/pending_tasks"
            android:textColor="@color/color_text_secondary_dark"
            android:textSize="17sp" />
    </LinearLayout>

    <View
        android:id="@+id/viewIndicatorTop"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:layout_marginTop="16dp"
        android:background="@color/color_border_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutDone" />

    <TextView
        android:id="@+id/textTitle7days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:fontFamily="@font/sf_rounded_bold"
        android:paddingBottom="8dp"
        android:text="@string/tasks_in_next_7_days"
        android:textColor="@color/color_menu_text_default"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewIndicatorTop" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerNext7Days"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="60dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@id/viewIndicatorBottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textTitle7days"
        tools:itemCount="24"
        tools:listitem="@layout/item_task_mine" />

    <ImageView
        android:id="@+id/imageNoTask"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:contentDescription="@null"
        android:src="@drawable/img_no_task"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@drawable/bg_fade_grey"
        app:layout_constraintBottom_toTopOf="@id/viewIndicatorBottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/viewIndicatorBottom"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:layout_marginBottom="180dp"
        android:background="@color/color_border_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.trustedapp.todolist.planner.reminders.common.chart.PieChart
        android:id="@+id/chart"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginVertical="24dp"
        android:layout_marginStart="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewIndicatorBottom" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerChart"
        android:layout_width="0dp"
        tools:itemCount="6"
        tools:listitem="@layout/item_chart"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/chart"
        app:layout_constraintTop_toTopOf="@id/chart"
        app:layout_constraintStart_toEndOf="@id/chart"
        android:layout_marginStart="36dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
