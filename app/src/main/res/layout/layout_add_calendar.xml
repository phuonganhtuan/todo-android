<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:animateLayoutChanges="true"
        android:background="@drawable/bg_white_top_rounded">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="16dp"
            android:animateLayoutChanges="true"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:animateLayoutChanges="true"
                android:orientation="vertical">
                <!--calendar-->
                <com.example.todo.common.calendarview.TaskCalendarView
                    android:id="@+id/calendarView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- Selected Date-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp">

                    <ImageView
                        android:id="@+id/imgSelectedDate"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_date" />

                    <TextView
                        android:id="@+id/tvSelectedDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="8dp"
                        android:paddingHorizontal="8dp"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="@+id/imgSelectedDate"
                        app:layout_constraintStart_toEndOf="@+id/imgSelectedDate"
                        app:layout_constraintTop_toTopOf="@+id/imgSelectedDate"
                        tools:text="03/01/2021" />

                </LinearLayout>
                <!--Add Time-->
                <LinearLayout
                    android:id="@+id/lnAddTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp">

                    <ImageView
                        android:id="@+id/imgAddTime"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_hour" />

                    <TextView
                        android:id="@+id/tvAddTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/bg_white_rounded_8"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"
                        android:text="@string/add_time"
                        android:textColor="@color/color_text_secondary_dark"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="@+id/imgSelectedDate"
                        app:layout_constraintStart_toEndOf="@+id/imgSelectedDate"
                        app:layout_constraintTop_toTopOf="@+id/imgSelectedDate" />

                </LinearLayout>

                <!--Reminder-->
                <LinearLayout
                    android:id="@+id/lnReminder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp"
                    android:orientation="vertical"
                    android:paddingHorizontal="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgReminder"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:contentDescription="@null"
                            android:src="@drawable/ic_reminder" />

                        <TextView
                            android:id="@+id/tvReminder"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="8dp"
                            android:paddingHorizontal="8dp"
                            android:text="@string/reminder"
                            android:textColor="@color/color_text_secondary_dark"
                            android:textSize="18sp"
                            app:layout_constraintBottom_toBottomOf="@+id/imgSelectedDate"
                            app:layout_constraintStart_toEndOf="@+id/imgSelectedDate"
                            app:layout_constraintTop_toTopOf="@+id/imgSelectedDate" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/swReminder"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:thumb="@drawable/custom_thumb"
                            app:track="@drawable/custom_track" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvReminderValue"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginLeft="40dp"
                        android:text="@string/_5_minute_before"
                        android:textColor="@color/color_text_secondary_dark"
                        android:textSize="18sp" />
                </LinearLayout>
                <!--Repeat-->
                <LinearLayout
                    android:id="@+id/lnRepeat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp"
                    android:orientation="vertical"
                    android:paddingHorizontal="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgRepeat"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:contentDescription="@null"
                            android:src="@drawable/ic_repeat" />

                        <TextView
                            android:id="@+id/tvRepeat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="8dp"
                            android:paddingHorizontal="8dp"
                            android:text="@string/repeat"
                            android:textColor="@color/color_text_secondary_dark"
                            android:textSize="18sp"
                            app:layout_constraintBottom_toBottomOf="@+id/imgSelectedDate"
                            app:layout_constraintStart_toEndOf="@+id/imgSelectedDate"
                            app:layout_constraintTop_toTopOf="@+id/imgSelectedDate" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/swRepeat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:thumb="@drawable/custom_thumb"
                            app:track="@drawable/custom_track" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvRepeatValue"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginLeft="40dp"
                        android:text="@string/hour"
                        android:textColor="@color/color_text_secondary_dark"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>
</RelativeLayout>
