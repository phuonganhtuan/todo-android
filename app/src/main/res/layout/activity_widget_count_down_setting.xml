<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/header"
        layout="@layout/layout_toolbar" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardIcon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="32dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="40dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header">

        <ImageView
            android:id="@+id/imageIcon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_greybg_rounded_8"
            android:padding="22dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_balloon" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/event_icon"
        android:textColor="@color/color_text_secondary_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardIcon" />

    <EditText
        android:id="@+id/editEventName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:autofillHints="@null"
        android:backgroundTint="@color/color_border_grey"
        android:hint="@string/event_name"
        android:inputType="textMultiLine"
        android:textColor="@android:color/black"
        android:textColorHint="@color/color_text_secondary_dark"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textIcon" />

    <TextView
        android:id="@+id/textCharCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:text="0/30"
        android:textColor="@color/color_text_secondary"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editEventName" />

    <TextView
        android:id="@+id/textCountType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:fontFamily="@font/sf_rounded_bold"
        android:text="@string/count_type"
        android:textColor="@color/color_menu_text_default"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textCharCount" />

    <TextView
        android:id="@+id/buttonCountType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_ripple_white_stroke_rounded_8"
        android:drawablePadding="8dp"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:text="@string/remaining_days"
        android:textColor="@color/color_text_secondary_dark"
        android:textSize="16sp"
        app:drawableEndCompat="@drawable/ic_arrow_down_16"
        app:layout_constraintBottom_toBottomOf="@id/textCountType"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/textCountType" />

    <TextView
        android:id="@+id/textDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/sf_rounded_bold"
        android:text="@string/day"
        android:textColor="@color/color_menu_text_default"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textCountType" />

    <TextView
        android:id="@+id/buttonDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_white_rounded_8"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:text="01/03/2022"
        android:textColor="@color/color_menu_text_default"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/textDay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textDay" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonSave"
        style="@style/ButtonPrimary_16"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <RelativeLayout
        android:id="@+id/layoutIcons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/bg_white_rounded"
        android:elevation="12dp"
        android:padding="16dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardIcon">

        <LinearLayout
            android:id="@+id/layoutIcons1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/bg_white_rounded_8"
                android:padding="4dp"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/icon2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/bg_white_rounded_8"
                android:padding="4dp"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/icon3"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/bg_white_rounded_8"
                android:padding="4dp"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/icon4"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/bg_white_rounded_8"
                android:padding="4dp"
                android:scaleType="centerCrop" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layoutIcons1"
            android:layout_marginTop="16dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon5"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/bg_white_rounded_8"
                android:padding="4dp"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/icon6"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/bg_white_rounded_8"
                android:padding="4dp"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/icon7"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/bg_white_rounded_8"
                android:padding="4dp"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/icon8"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/bg_white_rounded_8"
                android:padding="4dp"
                android:scaleType="centerCrop" />
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
